{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Run Tests",
        "preLaunchTask": "npm: localnet",
        "program": "${workspaceFolder}/tests/node_modules/mocha/bin/_mocha",
        "args": ["-r", "dotenv/config", "--recursive", "**/*.test.ts", "--timeout", "600000", "--exit"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "cwd": "${workspaceFolder}/tests"
      }
    ]
  }
